<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Art√≠culos</title>
    </head>
    <body>
        <style is:global>
            .articles-container {
                @apply container mx-auto p-4 bg-lime-100;
            }

            .articles-list-title {
                @apply text-3xl font-bold mb-4;
            }

            .articles-list {
                @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 bg-lime-200;
            }

            .article-card {
                @apply p-4 border rounded-lg shadow-md bg-lime-400;
            }

            .article-title {
                @apply text-xl font-bold;
            }

            .filters {
                @apply mb-4 flex flex-col md:flex-row gap-4;
            }

            .filter-input {
                @apply p-2 border rounded;
            }

            .checkbox-label {
                @apply p-2 flex items-center;
            }

            .checkbox-text {
                @apply ml-2 text-gray-700;
            }

            .pagination {
                @apply flex justify-center mt-4;
            }

            .pagination-button {
                @apply mx-1 px-3 py-1 border rounded bg-lime-300 hover:bg-lime-400;
            }

            .pagination-button.active {
                @apply bg-lime-500 text-white;
            }
        </style>

        <slot />
    </body>
</html>
